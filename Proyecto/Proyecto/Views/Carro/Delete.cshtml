@model Proyecto.Models.Carro

@{
    ViewBag.Title = "Eliminar";
}

@if (Convert.ToInt32(Session["idRol"]) == 1)
{

    <h2>Eliminar</h2>

    <h3>Are you sure you want to delete this?</h3>
    <div>
        <h4>Carro</h4>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.estado.nombre)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.estado.nombre)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.marca.nombreMarca)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.marca.nombreMarca)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.modelo)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.modelo)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.precio)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.precio)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.descripcion)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.descripcion)
            </dd>
            @if (Model.imgenCarrro.Any(f => f.tip == Proyecto.Models.FileType.Imagen))
            {
                <dt>
                    Imagen
                </dt>
                <dd>
                    <img src="~/ImagenCarro?id=@Model.imgenCarrro.First(f => f.tip == Proyecto.Models.FileType.Imagen ).idImagenCarro " alt="imagen" width="200" />
                </dd>
            }

        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <input type="submit" value="Eliminar" class="btn btn-default" /> |
                @Html.ActionLink("Regresar", "Index")
            </div>
        }
    </div>

}
else
{
    <h2>Este contenido es solo para el administrador</h2>
}   
